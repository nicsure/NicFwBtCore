<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NicFwBtCore.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Button IsEnabled="False" x:Name="StartScan" Text="Start Bluetooth Scan" Clicked="Button_Clicked"/>
            <ActivityIndicator x:Name="Activity"/>
            <Label x:Name="Status" HorizontalTextAlignment="Center" />
            <Picker HorizontalTextAlignment="Center" SelectedIndexChanged="Devices_SelectedIndexChanged" IsEnabled="False" x:Name="Devices"/>
            <Button x:Name="ChannelRead" Text="Read Channels" IsEnabled="False" Clicked="ChannelRead_Clicked"/>
            <Button x:Name="ChannelView" Text="View Channels" IsEnabled="True" Clicked="ChannelView_Clicked"/>
            <Button x:Name="ChannelWrite" Text="Write Channels" IsEnabled="False" Clicked="ChannelWrite_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
